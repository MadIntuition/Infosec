<Window x:Class="Dnevnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dnevnik"
        mc:Ignorable="d"
        Title="Dnevnik - Main" Height="574.415" Width="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <Menu x:Name="menuMainWindow" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="8"
              Background="#FFDCEDFF" >
            <MenuItem Header="File">
                <MenuItem Header="1" ></MenuItem>
                <MenuItem Header="2" >
                    <MenuItem Header="3"></MenuItem>
                    <MenuItem Header="4" ></MenuItem>
                </MenuItem>
                <Separator />
                <MenuItem x:Name="ExitMenuItem" Header="Exit" Click="ExitMenuItem_Click" ></MenuItem>
            </MenuItem>
            <MenuItem x:Name="LoginMenuItem" Header="Login" Click="LoginMenuItem_Click" ></MenuItem>
        </Menu>


        <Button x:Name="findButton" Grid.Column="6" Grid.Row="1" 
                Margin="0, 5" Padding="5" Content="Поиск"/>
        <!--<Button x:Name="createSubTypeButton" Grid.Column="6" Grid.Row="2" 
                Margin="0, 0, 0, 5" Padding="5" Content="Создать подтип" Command="{Binding AddCommand}" />-->
        <TextBlock Grid.Column="3" Grid.Row="1" 
                   Margin="0, 10" Text="Найти:"/>
        <TextBox x:Name="searchingTextBox" Grid.Column="5" Grid.Row="1"
                 Margin="10, 5"/>

        <!--Body-->
        <!--Left ListBox for Types-->
        <ListBox x:Name="entitiesListBox" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3"> <!--ItemsSource="{Binding Entities}-->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock x:Name="entityItemTextBlock" FontSize="18" Text="{Binding EntityName}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <!--Right ListBox for SubTypes SelectedItem="{Binding SelectedPhone}"-->
        <ListBox Grid.Column="3" Grid.Row="3" Grid.RowSpan="1" Grid.ColumnSpan="4" 
                 x:Name="instancesListBox" ItemsSource="{Binding People}">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="Margin" Value="0,1" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock FontSize="18" Margin="20, 0" Text="{Binding FirstName}"/>
                            <TextBlock FontSize="18" Margin="20, 0" Text="{Binding LastName}" />
                            <Label>Tel:</Label>
                            <TextBlock Margin="3,5,5,5" Text="{Binding Telephone}" />
                        </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="3" Grid.ColumnSpan="4" Grid.Row="4" Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Center">
            <Button Content="Добавить" Padding="20,0" Margin="20,0" Command="{Binding AddCommand}" Background="#FF00FF8B"  />
            <Button Content="Изменить" Padding="20,0" Margin="20,0" Command="{Binding EditCommand}"
                    CommandParameter="{Binding ElementName=instancesList, Path=SelectedItem}" Background="#FF96CFFF"  />
            <Button Content="Удалить" Padding="20,0" Margin="20,0" Command="{Binding DeleteCommand}"
                    CommandParameter="{Binding ElementName=instancesList, Path=SelectedItem}" Background="#FFFFA669"  />
        </StackPanel>
        <!--Footer-->
        <Button x:Name="createTypeButton" Grid.Column="1" Grid.Row="4" 
                Margin="0, 10, 0, 0" Width="140" Padding="5" Content="Создать тип" Click="CreateTypeButton_Click"/>

    </Grid>
</Window>